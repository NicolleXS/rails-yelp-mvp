<div class="container">
  <h3>Restaurant name: <%= @restaurant.name %></h3>
  <p>Restaurant address: <%= @restaurant.address %></p>
  <p>Food category: <%= @restaurant.category %></p>
  <% @restaurant.reviews.each do |review| %>
      <p>
      Review: "<%= review.content %>",
      Rating: <%= review.rating %>
      </p>
  <% end %>
  <%= link_to "Back to restaurants", restaurants_path, class: "btn btn-light" %>
  <%= link_to "Add a review", new_restaurant_review_path(@restaurant), class: "btn btn-light" %>
</div>
